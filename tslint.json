{
    "extends": [
        "tslint-config-airbnb",
        "tslint-plugin-prettier"
    ],
    "rules": {
        "prettier": [
            true,
            {
                "trailingComma": "es5",
                "tabWidth": 4,
                "semi": true,
                "singleQuote": true,
                "bracketSpacing": true
            }
        ],
        "max-line-length": [
            false
        ],
        "ter-indent": [
            false
        ],
        "ter-arrow-parens": [
            true,
            "as-needed"
        ],
        "space-before-function-paren": false,
        "align": [
            false
        ],
        "variable-name": [
            true,
            "check-format",
            "allow-pascal-case"
        ],
        "import-name": [
            false
        ],
        "trailing-comma": [
            false
        ]
    }
}